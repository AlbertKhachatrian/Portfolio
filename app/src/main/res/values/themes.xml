<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Portfolio" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Portfolio.Text.GreyText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="Theme.Portfolio.Text.HeaderText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_30</item>
    </style>

    <style name="Theme.Portfolio.Text.SubHeaderText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="Theme.Portfolio.Text.GreenText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_bold</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Theme.Portfolio.Text.BodyText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/sf_pro_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

</resources>